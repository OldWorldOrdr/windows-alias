    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/alias.exe",
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
